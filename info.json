{
  "name": "mqtt_paho",
  "label": "MQTT Paho",
  "description": "MQTT connector using Eclipse Paho.",
  "publisher": "Community",
  "version": "1.0.0",
  "category": "Utilities",
  "icon_small_name": "mqtt_paho_small.svg",
  "icon_large_name": "mqtt_paho_large.svg",
  "configuration": {
    "fields": [
      {
        "title": "Broker Host",
        "name": "broker_host",
        "type": "text",
        "required": true,
        "editable": true,
        "visible": true,
        "description": "MQTT broker hostname or IP.",
        "tooltip": "Example: broker.example.com"
      },
      {
        "title": "Broker Port",
        "name": "broker_port",
        "type": "integer",
        "required": true,
        "editable": true,
        "visible": true,
        "description": "MQTT broker port.",
        "value": 1883,
        "tooltip": "Default: 1883 (or 8883 for TLS)."
      },
      {
        "title": "Use TLS",
        "name": "use_tls",
        "type": "checkbox",
        "required": false,
        "editable": true,
        "visible": true,
        "description": "Enable TLS for broker connection.",
        "value": false
      },
      {
        "title": "Verify TLS Certificate",
        "name": "verify_ssl",
        "type": "checkbox",
        "required": false,
        "editable": true,
        "visible": true,
        "description": "Verify broker TLS certificate.",
        "value": true
      },
      {
        "title": "CA Certificate Path",
        "name": "ca_cert",
        "type": "text",
        "required": false,
        "editable": true,
        "visible": true,
        "description": "Optional CA certificate path on the connector host.",
        "tooltip": "Leave empty to use system defaults."
      },
      {
        "title": "Username",
        "name": "username",
        "type": "text",
        "required": false,
        "editable": true,
        "visible": true,
        "description": "Broker username."
      },
      {
        "title": "Password",
        "name": "password",
        "type": "password",
        "required": false,
        "editable": true,
        "visible": true,
        "description": "Broker password."
      },
      {
        "title": "Client ID",
        "name": "client_id",
        "type": "text",
        "required": false,
        "editable": true,
        "visible": true,
        "description": "Optional client identifier."
      },
      {
        "title": "Keepalive (seconds)",
        "name": "keepalive",
        "type": "integer",
        "required": false,
        "editable": true,
        "visible": true,
        "description": "MQTT keepalive interval.",
        "value": 60
      },
      {
        "title": "Clean Session",
        "name": "clean_session",
        "type": "checkbox",
        "required": false,
        "editable": true,
        "visible": true,
        "description": "Start with a clean session.",
        "value": true
      },
      {
        "title": "Connect Timeout (seconds)",
        "name": "connect_timeout",
        "type": "integer",
        "required": false,
        "editable": true,
        "visible": true,
        "description": "Timeout waiting for broker connection.",
        "value": 10
      },
      {
        "title": "Last Will Topic",
        "name": "will_topic",
        "type": "text",
        "required": false,
        "editable": true,
        "visible": true,
        "description": "Optional last will topic."
      },
      {
        "title": "Last Will Payload",
        "name": "will_payload",
        "type": "textarea",
        "required": false,
        "editable": true,
        "visible": true,
        "description": "Optional last will payload."
      },
      {
        "title": "Last Will QoS",
        "name": "will_qos",
        "type": "integer",
        "required": false,
        "editable": true,
        "visible": true,
        "description": "Last will QoS level.",
        "value": 0
      },
      {
        "title": "Last Will Retain",
        "name": "will_retain",
        "type": "checkbox",
        "required": false,
        "editable": true,
        "visible": true,
        "description": "Retain last will message.",
        "value": false
      }
    ]
  },
  "operations": [
    {
      "operation": "publish_message",
      "title": "Publish Message",
      "description": "Publish a message to an MQTT topic.",
      "category": "miscellaneous",
      "annotation": "publish",
      "parameters": [
        {
          "title": "Topic",
          "name": "topic",
          "type": "text",
          "required": true,
          "editable": true,
          "visible": true,
          "description": "Topic to publish to."
        },
        {
          "title": "Payload",
          "name": "payload",
          "type": "textarea",
          "required": false,
          "editable": true,
          "visible": true,
          "description": "Message payload as text."
        },
        {
          "title": "QoS",
          "name": "qos",
          "type": "integer",
          "required": false,
          "editable": true,
          "visible": true,
          "description": "Quality of service level.",
          "value": 0
        },
        {
          "title": "Retain",
          "name": "retain",
          "type": "checkbox",
          "required": false,
          "editable": true,
          "visible": true,
          "description": "Retain the published message.",
          "value": false
        },
        {
          "title": "Publish Timeout (seconds)",
          "name": "timeout",
          "type": "integer",
          "required": false,
          "editable": true,
          "visible": true,
          "description": "Timeout waiting for publish acknowledgement.",
          "value": 10
        }
      ],
      "enabled": true,
      "output_schema": {
        "status": "",
        "message": "",
        "topic": "",
        "mid": "",
        "published": ""
      }
    },
